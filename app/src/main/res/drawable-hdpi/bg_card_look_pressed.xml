<?xml version="1.0" encoding="utf-8"?>

<!--
    Source: http://stackoverflow.com/questions/24095223/android-linearlayout-add-border-with-shadow-around-a-linearlayout
-->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/cardShadowColor"/>
            <corners android:radius="@dimen/card_border_radius" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="@dimen/card_shadow_thickness">
        <shape android:shape="rectangle">
            <solid android:color="@color/cardPressedColor"/>
            <corners android:radius="@dimen/card_border_radius" />
        </shape>
    </item>
</layer-list>